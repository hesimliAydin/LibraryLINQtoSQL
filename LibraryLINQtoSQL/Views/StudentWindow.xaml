<Window x:Class="LibraryLINQtoSQL.Views.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryLINQtoSQL.Views"
        mc:Ignorable="d"
        Title="StudentWindow" Height="450" Width="800">
    <Grid>
        <Image
             Source="/Image/library.jpg" Stretch="Fill">

        </Image>
        <Button Height="60"
                    Width="300"
                    Background="Black"
                    Content="Show All Books"
                    Foreground="White"
                    FontSize="30"
                    FontFamily="Georgia"
                    Command="{Binding ShowAllCommand}"
                    >

        </Button>
        
    </Grid>
</Window>
